{
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true,
      "destructuring": true,
      "spread": true,
      "templateStrings": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jquery": true
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.6.1"
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "class-methods-use-this": 0,
    "react/no-direct-mutation-state": 2,
    "indent": [
      "error",
      2
    ],
    "eqeqeq": "error",
    "curly": "error",
    "quotes": [
      "error",
      "single"
    ]
  }
}